<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ViewAllRidersFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CEE8FD"
                android:padding="10dp">

<!--                <TextView-->

<!--                    android:layout_width="40dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:fontFamily="serif"-->
<!--                    android:text="Rider ID"-->
<!--                    android:textColor="#000" />-->

                <TextView

                    android:layout_width="56dp"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Rider Name"
                    android:textColor="#000" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Address"
                    android:textColor="#000" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Email"
                    android:textColor="#000" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Mobile No"
                    android:textColor="#000" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F8F8F8"
                android:padding="5dp">

<!--                <TextView-->
<!--                    android:id="@+id/rider_id"-->
<!--                    android:layout_width="40dp"-->
<!--                    android:layout_height="29dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:fontFamily="serif"-->
<!--                    android:textColor="#000" />-->

                <TextView
                    android:id="@+id/rider_name"
                    android:layout_width="67dp"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"

                    android:textColor="#000" />

                <TextView
                    android:id="@+id/rider_address"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"

                    android:textColor="#000" />

                <TextView
                    android:id="@+id/rider_email"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"

                    android:textColor="#000" />

                <TextView
                    android:id="@+id/rider_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"

                    android:textColor="#000" />

            </TableRow>
        </TableLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>